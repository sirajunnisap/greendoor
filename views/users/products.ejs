    <script>
        function addToWishlist(prodId){
            $.ajax({
                url:'/addToWishlist',
                data : {
                    productId : prodId
                },
                method : 'post',

                success : (res) =>{
                    if(res.success){
                        Swal.fire({
                            title : 'Added',
                            text : 'product added to wishlist',
                            position : 'center',
                            icon : 'success',
                            showConfirmButton : false,
                            timer : 1000
                        })
                        
                    }else{
                        Swal.fire({
                            title : 'Already Exist',
                            text : 'product already in wishlist',
                            icon : 'info',
                            showConfirmButton :false,
                            timer:1000
                        })
                    }
                }
            })
        }
     </script>

      <script>
        function addToCart(prodId){
            $.ajax({
                url:'/addtocart',
                data : {
                    productId : prodId
                },
                method : 'post',

                success : (res) =>{
                    if(res.success){
                        Swal.fire({
                            title : 'Added',
                            text : 'product added to cart',
                            position : 'center',
                            icon : 'success',
                            showConfirmButton : false,
                            timer : 1000
                        })
                        
                    }else{
                        Swal.fire({
